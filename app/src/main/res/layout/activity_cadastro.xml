<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/dark_bg_primary">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTituloCadastro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Criar Conta"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/dark_accent"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/txtSubtituloCadastro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Preencha os dados abaixo para se registrar"
        android:textSize="14sp"
        android:textColor="@color/dark_text_secondary"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloCadastro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nome Input -->

    <!-- Email Input -->

    <!-- Senha Input -->

    <!-- Botão Salvar -->

    <!-- Botão Voltar -->

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/edittext_dark_bg"
        android:hint="Nome completo"
        android:inputType="text"
        android:textColor="@color/dark_text_primary"
        android:textColorHint="@color/dark_text_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSubtituloCadastro" />

    <EditText
        android:id="@+id/edtEmailCadastro"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_dark_bg"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/dark_text_primary"
        android:textColorHint="@color/dark_text_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtNome" />

    <EditText
        android:id="@+id/edtSenhaCadastro"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_dark_bg"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@color/dark_text_primary"
        android:textColorHint="@color/dark_text_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtEmailCadastro" />

    <Button
        android:id="@+id/btnSalvarCadastro"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/button_dark_primary"
        android:text="Salvar"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtSenhaCadastro" />

    <Button
        android:id="@+id/btnVoltarLogin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_dark_secondary"
        android:text="Voltar"
        android:textColor="@color/dark_accent"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSalvarCadastro" />

</androidx.constraintlayout.widget.ConstraintLayout>