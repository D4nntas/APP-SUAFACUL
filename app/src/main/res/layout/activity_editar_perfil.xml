<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FF6600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Scroll View para o conteúdo -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Foto de Perfil -->
            <ImageView
                android:id="@+id/imgPerfilEditavel"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_profile_avatar"
                android:contentDescription="Foto de Perfil"
                android:layout_marginBottom="24dp" />

            <!-- Label Nome -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Input Nome -->
            <EditText
                android:id="@+id/edtNomePerfil"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Seu nome completo"
                android:inputType="text"
                android:background="@drawable/edittext_dark_bg"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="20dp" />

            <!-- Label Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Input Email -->
            <EditText
                android:id="@+id/edtEmailPerfil"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="seu.email@example.com"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_dark_bg"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="20dp" />

            <!-- Label Senha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senha"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Input Senha -->
            <EditText
                android:id="@+id/edtSenhaPerfil"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Sua senha"
                android:inputType="textPassword"
                android:background="@drawable/edittext_dark_bg"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="32dp" />

            <!-- Botão Salvar -->
            <Button
                android:id="@+id/btnSalvarPerfil"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Salvar Alterações"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_dark_primary"
                android:layout_marginBottom="12dp" />

            <!-- Botão Voltar -->
            <Button
                android:id="@+id/btnVoltarPerfil"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Voltar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF6600"
                android:background="@drawable/button_dark_secondary" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
